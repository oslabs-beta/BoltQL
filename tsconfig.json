{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "target": "es6",
        // "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "jsx": "react",
        "baseUrl": ".",

        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },

    "include": [
        "src/**/*",
        "dist/**/*",
        "npm-package/**/*"
    ]
}